/var/log/haproxy/*.log {
    daily
    rotate {{ log_retention_days }}
    missingok
    notifempty
    compress
    delaycompress
    postrotate
        /bin/kill -HUP `cat /var/run/rsyslog.pid 2> /dev/null` 2> /dev/null || true
    endscript
}

/var/log/envoy/*.log {
    daily
    rotate {{ log_retention_days }}
    missingok
    notifempty
    compress
    delaycompress
    copytruncate
}

/var/log/filebeat/*.log {
    daily
    rotate {{ log_retention_days }}
    missingok
    notifempty
    compress
    delaycompress
    copytruncate
}

/var/log/system-monitor.log {
    daily
    rotate 7
    missingok
    notifempty
    compress
    delaycompress
}