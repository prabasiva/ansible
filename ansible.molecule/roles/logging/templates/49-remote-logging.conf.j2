# Remote logging configuration for ELK integration
# Generated by Ansible

# Enable UDP syslog reception
$ModLoad imudp
$UDPServerRun 514
$UDPServerAddress 127.0.0.1

# HAProxy logs
local0.*    /var/log/haproxy/haproxy.log
& stop

# Envoy logs
local1.*    /var/log/envoy/envoy.log
& stop

# Forward all logs to Logstash
*.*         @@localhost:514